<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crop"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/otherBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginBottom="92dp"
        android:onClick="clickOtherBtn"
        android:shadowColor="#F5FFFFFF"
        android:text="Others"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calcBtn"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Select any Stream "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0C0C0C"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/geometryBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:onClick="clickGeometryBtn"
        android:text="Geometry"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/calcBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/algebraBtn"
        app:layout_constraintTop_toBottomOf="@+id/calculasBtn" />

    <Button
        android:id="@+id/calculasBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="#FAFAFA"
        android:backgroundTint="#FFFFFF"
        android:onClick="clickCalculasBtn"
        android:text="Calculas"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/geometryBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trignometryBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.316"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/trignometryBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="#ffff"
        android:onClick="clickedTrignomertyBtn"
        android:text="Trignometry"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/algebraBtn"
        app:layout_constraintEnd_toStartOf="@+id/calculasBtn"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.587" />

    <Button
        android:id="@+id/algebraBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:onClick="clicedAlgebrabtn"
        android:text="Algebra"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/otherBtn"
        app:layout_constraintEnd_toStartOf="@+id/geometryBtn"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trignometryBtn" />

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginBottom="44dp"
        android:background="@android:drawable/ic_menu_share"
        android:onClick="shareFunction"
        app:layout_constraintBottom_toTopOf="@+id/calculasBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <Button
        android:id="@+id/calcBtn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="92dp"
        android:onClick="clickCalcBtn"
        android:text="calculator"
        android:textColorLink="#711D1D"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>